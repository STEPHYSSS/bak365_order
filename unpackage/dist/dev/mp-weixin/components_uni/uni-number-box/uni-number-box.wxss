.uni-numbox {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  position: relative;
}
.uni-numbox__minus, .uni-numbox__plus {
  background: #eee;
  width: 22px;
  text-align: center;
  height: 22px;
  border-radius: 50%;
  border: 1px solid #c9c6c6;
  position: relative;
  line-height: 22px;
  margin: auto;
}
.uni-numbox__value {
  position: relative;
  background-color: #ffffff;
  width: 24px;
  height: 24px;
  line-height: 24px;
  text-align: center;
  padding: 0;
  font-size: 10pt;
}
.uni-numbox--disabled {
  color: #c0c0c0;
}

